<table class="table">
  <thead>
    <tr>
      <th>会員ID</th>
      <th>名前</th>
      <th>自己紹介</th>
      <th>メールアドレス</th>
      <th>ステータス</th>
    </tr>
  </thead>

  <tbody>
    <% @customers.each do |customer| %>
      <tr>
        <td class="info col-xs-1">
          <%= customer.id %>
        </td>
        <td class="text-left">
          <%= link_to admin_customer_path(customer) do %>
          <%= customer.name %>
          <% end %>
        </td>
        <td class="text-left">
          <%= customer.introduction %>
        </td>
        <td class="text-left">
          <%= customer.email %>
        </td>
        <td class="col-xs-2">
          <% if customer.is_delete == true%>
            <p class="text-secondary">退会済</p>
          <% else %>
            <p class="text-success">有効</p>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>