<table class="table">
  <thead>
    <tr>
      <th></th>
      <th>タイトル</th>
      <th>あらすじ</th>
      <th>ステータス</th>
    </tr>
  </thead>

  <tbody>
    <% @comics.each do |comic| %>
      <tr>
       <td>
          <% if comic.image.attached? %>
            <%= image_tag comic.image, size: "80x80" %>
          <% else %>
            <%= image_tag 'no_image', size: "80x80" %>
          <% end %>
        </td>
        </td>
        <td class="text-left">
          <%= link_to admin_comic_path(comic) do %>
          <%= comic.title %>
          <% end %>
        </td>
        <td class="text-left">
          <%= comic.synopsis %>
        </td>
        <td class="col-xs-2">
          <% if comic.is_delete == true%>
            <p class="text-secondary">削除済</p>
          <% else %>
            <p class="text-success">有効</p>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>