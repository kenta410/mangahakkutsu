<div class="container mt-5">
  <h3>新規会員登録</h3>
  <div class="row">
      <div class="col-lg-12 mx-auto ">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

        <!--<div class="row">-->
        <!--  <div class="col-md-2">名前</div>-->
        <!--  <div class="col-md-4">-->
        <!--    <%= f.text_field :name, class: 'form-control' %>-->


        <table>
        <tbody>
          <tr>
            <th>名前</th>
            <td class="sign-up-small-cell"></td>
            <td><%= f.text_field :name, autofocus: true %></td>
          </tr>
          <tr>
            <th>メールアドレス</th>
            <td class="sign-up-small-cell"></td>
            <td><%= f.email_field :email, autofocus: true, autocomplete: "email"%></td>
          </tr>
          <tr>
            <th>パスワード（６文字以上）</th>
            <td class="sign-up-small-cell"></td>
            <td><%= f.password_field :password %></td>
          </tr>
          <tr>
            <th>パスワード（確認用）</th>
            <td class="sign-up-small-cell"></td>
            <td><%= f.password_field :password_confirmation, autocomplete: "current-password" %></td>
          </tr>
          <tr class="d-block mx-auto">
            <td>
              <%= f.submit "新規登録", class:"btn btn-success mt-3" %>
            </td>
          </tr>
        </tbody>
      </table>
      <% end %>
      <br>
      </br>
      </div>
  </div>
  <div class="row">
    <div>
      <h3>既に登録済みの方</h3>
      <span class="col-xs-6 col-xs-offset-2 sign-up-message"><%= link_to 'こちら', new_customer_session_path %>からログインしてください。</span>
    </div>
  </div>
</div>