<table class='table'>
  <thead>
    <tr>
      <th>画像</th>
      <th>名前</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% customers.each do |customer| %>
      <tr>
        <td><%= image_tag customer.get_profile_image, size: '50x50' %></td>
        <td><%= customer.name %></td>
        <td><%= link_to '会員詳細', customer, class: "customer_#{customer.id}" %></td>
      </tr>
    <% end %>
  </tbody>
</table>