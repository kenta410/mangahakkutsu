<div class='container px-5 px-sm-0' >
  <%= render 'public/shared/error_messages', resource: @comic %>
  <div class='row'>
    <div class='col-md-3'>
      <h2>Customer info</h2>
      <%= render 'public/customers/info', customer: current_customer %>
      <h2 class="mt-3">New comic</h2>
      <%= render 'public/comics/form', comic: @comic %>
    </div>
    <div class='col-md-8 offset-md-1' >
      <h2>Comics</h2>
      <%= render 'public/comics/index', comics: @comics %>
    </div>
  </div>
</div>