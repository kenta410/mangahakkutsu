<%= form_with(model: [comic, comment], url: comic_comments_path(comic), local: true) do |f| %>
    <%= render 'public/shared/error_messages', resource: f.object %>

    <%= f.text_area :comment, rows:'5', placeholder: "コメント", class: "form-control form-control-sm" %>
    <div id="rating-form">
        <label>評価：</label>
        <%= f.hidden_field :rate, :value => 'score' %>
    </div>

    <%= f.submit "投稿する" %>
<% end %>


<script>
    $('#rating-form').raty({
        size     : 36,
        starOn: "<%= asset_path('star-on.png') %>",
        starOff: "<%= asset_path('star-off.png') %>",
        starHalf : '<%= asset_path('star-half.png') %>',
        half : true,
        scoreName: 'comment[rate]'
    });
</script>