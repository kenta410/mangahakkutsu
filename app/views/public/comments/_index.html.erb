<table>
  <tbody>
      <% comic.comic_comments.each do |comic_comment| %>
      <tr>

        <td>
          <%= link_to customer_path(comic_comment.customer) do %>
            <%= image_tag comic_comment.customer.get_profile_image, size: "100x100" %><br>
            <%= comic_comment.customer.name %>
          <% end %>
        </td>
        <td><%= comic_comment.comment %></td>
        <td>
          <% if comic_comment.customer == current_customer %>
            <%= link_to "Destroy", comic_comic_comment_path(comic, comic_comment), method: :delete, class: "btn btn-danger pull-right" %>
          <% end %>
        </td>
      </tr>
      <% end %>
  </tbody>
</table>